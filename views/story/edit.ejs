<%- include('../partials/head') %>

<div class="container mt-4" style="max-width: 600px;">
  <h1 class="text-center mb-4">Edit <%= foundStory.title %></h1>

  <form action="/story/<%= foundStory._id %>?_method=PUT" method="POST">
    <div class="mb-3">
        <label for="title">Story Title:</label>
        <input type="text" id="title" name="title" value="<%=foundStory.title%>" required />    
      </div>

      <div class="mb-3">
        <label for="date">Date: </label>
        <input type="date" id="date" name="date" value="<%=foundStory.date%>" />
      </div>

      <div class="mb-3">
        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" value="<%=foundStory.genre%>" />
      </div>

      <div class="mb-3">
        <label for="story">The story:</label>
        <textarea name="story" id="story" value="<%=foundStory.story%>"></textarea>
      </div>
      
      <button type="submit">Update story</button>
  </form>
</div>

</body>
</html>